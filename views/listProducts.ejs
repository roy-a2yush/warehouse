<%- include('./header.ejs') %>
<% for(var i=0; i < productDetails.length; i++) { %>
<div class="card" style="margin-left: 3rem; margin-right: 3rem; margin-top: 2rem;">
    <h5 class="card-header">Product Id: <%= productDetails[i].productId %></h5>
    <div class="card-body">
      <h5 class="card-title"><%= productDetails[i].productName %></h5>
      <p class="card-text">
          <strong>Brand: </strong><%= productDetails[i].brand %>
          <br>
          <strong>Place Tag: </strong><%= productDetails[i].placeTag %>
          <br>
          <strong>MRP: </strong><%= productDetails[i].MRP %>
          <br>
          <strong>Estimated SP: </strong><%= productDetails[i].estimatedSP %>
      </p>
      <a href="/product/find/<%= productDetails[i]._id %>" class="btn btn-primary">View Details</a>
    </div>
</div>
<% } %>
<%- include('./footer.ejs') %>